	author = {Kowalska, Beata},
	month = mar,
	year = {2023},
	pmid = {36999850},
	keywords = {Bacteria, Food Contamination, Food Microbiology, Fruit, Humans, Salmonella, Salmonella Food Poisoning, Salmonella Infections, Vegetables, food contamination, food safety, fruit, salmonellosis, vegetables},
	pages = {9--14},
