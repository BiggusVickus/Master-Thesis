@article{warwick-dugdaleHosthijackingPlanktonicPiracy2019,
  title = {Host-Hijacking and Planktonic Piracy: How Phages Command the Microbial High Seas},
  shorttitle = {Host-Hijacking and Planktonic Piracy},
  author = {{Warwick-Dugdale}, Joanna and Buchholz, Holger H. and Allen, Michael J. and Temperton, Ben},
  year = {2019},
