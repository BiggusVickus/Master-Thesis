@article{tuckerIdentificationCyanophageMaLBP2005,
  title = {Identification of {{Cyanophage Ma-LBP}} and {{Infection}} of the {{Cyanobacterium Microcystis}} Aeruginosa from an {{Australian Subtropical Lake}} by the {{Virus}}},
  author = {Tucker, Stephen and Pollard, Peter},
  year = {2005},
