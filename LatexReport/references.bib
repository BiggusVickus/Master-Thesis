@article{chengCharacterizationMarineAerosol2005,
  title = {Characterization of {{Marine Aerosol}} for {{Assessment}} of {{Human Exposure}} to {{Brevetoxins}}},
  author = {Cheng, Yung Sung and Zhou, Yue and Irvin, Clinton M. and Pierce, Richard H. and Naar, Jerome and Backer, Lorraine C. and Fleming, Lora E. and Kirkpatrick, Barbara and Baden, Dan G.},
