  langid = {english},
  keywords = {agent based,bacteriophage,biofilm,mass action,models,phage therapy,resistance},
  file = {/Users/vicpi/Zotero/storage/A4D42LI6/Bull et al. - 2018 - Phage-Bacterial Dynamics with Spatial Structure Self Organization around Phage Sinks Can Promote In.pdf}
}

