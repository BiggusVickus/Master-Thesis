}

@article{zhaoPhagedrivenCoevolutionReveals2024,
  title = {Phage-Driven Coevolution Reveals Trade-off between Antibiotic and Phage Resistance in {{Salmonella}} Anatum},
  author = {Zhao, Yuanyang and Shu, Mei and Zhang, Ling and Zhong, Chan and Liao, Ningbo and Wu, Guoping},
  year = {2024},
