	number = {8},
	journal = {Environmental Health Perspectives},
	author = {Hoagland, Porter and Jin, Di and Polansky, Lara Y. and Kirkpatrick, Barbara and Kirkpatrick, Gary and Fleming, Lora E. and Reich, Andrew and Watkins, Sharon M. and Ullmann, Steven G. and Backer, Lorraine C.},
	month = aug,
	year = {2009},
	pmid = {19672403},
	pmcid = {PMC2721867},
	keywords = {Environmental Health, Environmental Monitoring, Eutrophication, Florida, Health Care Costs, Humans, Inhalation Exposure, Marine Toxins, Oxocins, Respiratory Tract Diseases, cost of illness, economic impact, emergency department (ED), harmful algal bloom (HAB), natural hazard},
	pages = {1239--1243},
}

@article{kirkpatrickGastrointestinalEmergencyRoom2010,
	title = {Gastrointestinal {Emergency} {Room} {Admissions} and {Florida} {Red} {Tide} {Blooms}},
	volume = {9},
	issn = {1568-9883},
	url = {https://www.ncbi.nlm.nih.gov/pmc/articles/PMC2786186/},
	doi = {10.1016/j.hal.2009.08.005},
	abstract = {Human exposure to brevetoxins during Florida red tide blooms formed by Karenia brevis has been documented to cause acute gastrointestinal, neurologic, and respiratory health effects.. Traditionally, the routes of brevetoxin exposure have been through the consumption of contaminated bivalve shellfish and the inhalation of contaminated aerosols. However, recent studies using more sensitive methods have demonstrated the presence of brevetoxins in many components of the aquatic food web which may indicate potential alternative routes for human exposure., This study examined whether the presence of a Florida red tide bloom affected the rates of admission for a gastrointestinal diagnosis to a hospital emergency room in Sarasota, FL. The rates of gastrointestinal diagnoses admissions were compared for a 3-month time period in 2001 when Florida red tide bloom was present onshore to the same 3-month period in 2002 when no Florida red tide bloom occurred. A significant 40\% increase in the total number of gastrointestinal emergency room admissions for the Florida red tide bloom period was found compared to the non red tide period., These results suggest that the healthcare community may experience a significant and unrecognized impact from patients needing emergency medical care for gastrointestinal illnesses during Florida red tide blooms. Thus, additional studies characterizing the potential sources of exposure to the toxins, as well as the dose/effect relationship of brevetoxin exposure, should be undertaken.},
	number = {1},
	urldate = {2025-02-07},
	journal = {Harmful algae},
	author = {Kirkpatrick, Barbara and Bean, Judy A and Fleming, Lora E and Kirkpatrick, Gary and Grief, Lynne and Nierenberg, Kate and Reich, Andrew and Watkins, Sharon and Naar, Jerome},
	month = jan,
	year = {2010},
	pmid = {20161425},
	pmcid = {PMC2786186},
