  author = {Hoagland, Porter and Jin, Di and Polansky, Lara Y. and Kirkpatrick, Barbara and Kirkpatrick, Gary and Fleming, Lora E. and Reich, Andrew and Watkins, Sharon M. and Ullmann, Steven G. and Backer, Lorraine C.},
