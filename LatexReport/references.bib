  journal = {Current Opinion in Microbiology},
  series = {Host--Microbe Interactions: Fungi / Edited by {{Howard Bussey}} {$\cdot$} {{Host--microbe}} Interactions: Parasites / Edited by {{Artur Scherf}} {$\cdot$} {{Host--microbe}} Interactions: Viruses / Edited by {{Margaret CM Smith}}},
